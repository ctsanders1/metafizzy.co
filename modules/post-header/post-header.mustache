<a class="post-header" href="/blog/{{slug}}">
  {{#if thumbnail}}
  <div class="post-header__thumbnail"
    style="background-image: url(
      {{#if image}}{{image}}{{else}}/img/metafizzy-logo-thumbnail-magenta.png{{/if}}
    )"></div>
  {{/if}}
  <div class="post-header__text">
    <h1 class="post-header__title">{{{title}}}</h1>
    <p class="post-header__date">{{timestamp}}</p>
  </div>
</a>
